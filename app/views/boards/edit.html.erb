<h1 class="text-xl px-2 py-2">編輯看板區 Edit Board</h1>

<div class="mx-5 my-5">
  <%= form_with(model: @board, local: true) do |f| %>
    <%= f.label :name, "編輯看板區標題" %>
    <%= f.text_field :name, class: 'border-2 px-2 py-3' %>
    <%= f.submit '編輯完成', class: 'mt-4 ml-2 px-3 py-1 bg-orange-400 text-white block w-32 rounded text-center' %>
  <% end %>

  <%= link_to '刪除看板區', board_path, method: 'delete', class: "delete-link mt-4 ml-2 px-3 py-1 bg-red-500 block w-32 text-white rounded text-center", data: {confirm: '您確定要刪除這個看板區嗎?'}  %>
</div>